{
  "name": "@nuvix-tech/db",
  "version": "0.1.021",
  "description": "Modular and performant database library for Nuvix, with internal complexity abstracted from developers.",
  "license": "Proprietary",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/src/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c && tsc --emitDeclarationOnly",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "rm -rf dist && npm run build && npm run typecheck",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.5.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nuvix-Tech/database.git"
  },
  "devDependencies": {
    "@nuvix/cache": "^1.0.3-alpha.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.0.5"
  },
  "engines": {
    "node": ">=18.17"
  },
  "keywords": [
    "nuvix",
    "database",
    "typescript",
    "orm",
    "query-builder",
    "postgresql",
    "modular",
    "validation",
    "pino"
  ]
}
